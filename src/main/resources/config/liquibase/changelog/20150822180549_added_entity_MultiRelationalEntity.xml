<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity MultiRelationalEntity.
    -->
    <changeSet id="20150822180549" author="jhipster">
        <createTable tableName="MULTI_RELATIONAL_ENTITY">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="one_to_one_entity_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="one_to_many_entity_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="one_to_one_entity_id"
                                 baseTableName="MULTI_RELATIONAL_ENTITY"
                                 constraintName="fk_multirelationalentity_onetooneentity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ONE_TO_ONE_ENTITY"/>

        <createTable tableName="MULTI_RELATIONAL_ENTITY_MANY_TO_MANY_ENTITY">
            <column name="many_to_many_entitys_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="multi_relational_entitys_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="multi_relational_entitys_id, many_to_many_entitys_id" tableName="MULTI_RELATIONAL_ENTITY_MANY_TO_MANY_ENTITY"/>

        <addForeignKeyConstraint baseColumnNames="multi_relational_entitys_id"
                                 baseTableName="MULTI_RELATIONAL_ENTITY_MANY_TO_MANY_ENTITY"
                                 constraintName="fk_multirelationalentity_manytomanyentity_manytomanyentity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MULTI_RELATIONAL_ENTITY"/>

        <addForeignKeyConstraint baseColumnNames="many_to_many_entitys_id"
                                 baseTableName="MULTI_RELATIONAL_ENTITY_MANY_TO_MANY_ENTITY"
                                 constraintName="fk_manytomanyentity_manytomanyentity_multirelationalentity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="MANY_TO_MANY_ENTITY"/>
        
        <addForeignKeyConstraint baseColumnNames="one_to_many_entity_id"
                                 baseTableName="MULTI_RELATIONAL_ENTITY"
                                 constraintName="fk_multirelationalentity_onetomanyentity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ONE_TO_MANY_ENTITY"/>

    </changeSet>
</databaseChangeLog>
